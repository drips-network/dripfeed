# Database connection string
DATABASE_URL=<url>
# Database schema name (isolates this indexer's tables)
# IMPORTANT: One schema per chain - each chain must use a unique schema
DB_SCHEMA=<string>

# Chain Configuration
# Network name (matches JSON config filename in src/contract-definitions/chains/)
# Options: sepolia, mainnet, etc.
# IMPORTANT: One indexer per chain - only one indexer instance should run per chain
NETWORK=<string>
# RPC endpoint URL for this chain
RPC_URL=<url>
# Number of block confirmations to wait before considering block final
CONFIRMATIONS=<integer>

# Indexer Settings
# Number of blocks to fetch per batch from RPC
FETCH_BATCH_SIZE=<integer>
# Number of events to insert per database chunk
INSERT_CHUNK_SIZE=<integer>
# Number of blocks to process per batch
PROCESS_BATCH_SIZE=<integer>
# Milliseconds to wait when caught up (no new blocks)
# Should match your chain's block time: mainnet=12000, fast chains (Polygon/Arbitrum)=2000-3000 (default: 5000)
POLL_DELAY=<integer>
# Maximum consecutive loop errors before aborting the indexer
MAX_CONSECUTIVE_ERRORS=<integer>
# Number of concurrent RPC requests
RPC_CONCURRENCY=<integer>
# Automatically handle blockchain reorgs (default: false)
AUTO_HANDLE_REORGS=<boolean>

# Logging
# Log level: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=<DEBUG|INFO|WARN|ERROR>
# Enable pretty colored logs (set to 'true' for development)
LOG_PRETTY=<boolean>

# IPFS Configuration
# IPFS gateway URL for fetching metadata (default: https://drips.mypinata.cloud)
IPFS_GATEWAY_URL=<url>

# Cache Configuration
# Optional endpoint to call for cache invalidation
# CACHE_INVALIDATION_ENDPOINT=<url>
